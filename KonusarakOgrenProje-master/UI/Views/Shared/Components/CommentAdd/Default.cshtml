
<div class="comment-top">
    <h4>Bir yorum yapın</h4>
    <div>
        <form action="/Product/CommentAdd" method="post">
            <input type="hidden" name="ProductId" value="@ViewBag.ProductId"/>
            <input class="form-control mb-2" type="text" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
            <input class="form-control mb-2" type="text" name="CommentTitle" placeholder="Konu" required="">
            <textarea class="form-control mb-2" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Yorum Yap</button>
        </form>
    </div>
</div>
