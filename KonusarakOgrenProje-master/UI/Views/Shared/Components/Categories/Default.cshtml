@model List<EntityLayer.Concrete.Category>
<p>Kategori</p>
<div class="list-group mb-4">
    <a asp-controller="Product" asp-action="List" asp-route-id="" class="list-group-item list-group-item-action">Tümünü Göster</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Product"
           asp-action="List"
           asp-route-id="@item.CategoryId"
           class="list-group-item list-group-item-action">@item.Name</a>
    }
</div>