@model List<EntityLayer.Concrete.Company>
<p>Marka</p>
<div class="list-group">
    <a asp-controller="Product" asp-action="CompanyList" asp-route-id="" class="list-group-item list-group-item-action">Tümünü Göster</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Product"
           asp-action="CompanyList"
           asp-route-id="@item.CompanyId"
           class="list-group-item list-group-item-action">@item.Name</a>
    }
</div>