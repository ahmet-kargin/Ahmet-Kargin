@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
<link href="/css/ProductDetail.css" rel="stylesheet">

	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
						  <div class="tab-pane active"><img src="/img/@Model.ImageUrl" height="700px" /></div>
						</div>
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">@Model.Name</h3>
						<h4 class="price">Marka : <span>@Model.Company.Name </span></h4>
						<p class="product-description">@Model.Description</p>
						<h4 class="price">Ürün Fiyatı : <span>@Model.Price ₺</span></h4>
						<h5 class="sizes">Beden Seçİmİ:
							
							@*@Html.DropDownListFor(x => x.ProductSizes., (List<SelectListItem>)ViewBag.sv, new { @class = "form-control" })*@

						</h5>
						<h5 class="colors">Renk:
							
							@Model.Color.Name
						</h5>
						<div class="action">
							<button class="add-to-cart btn btn-default" type="button">Satın Al</button>
							<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	@await Component.InvokeAsync("Comment",Model.ProductID)
	@await Component.InvokeAsync("CommentAdd",Model.ProductID)
