@model List<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("Categories")
        @await Component.InvokeAsync("Marka")
    </div>
    <div class="col-md-9">
        <div class="row">
            @if (Model.Count == 0)
            {
                <p>Ürün Yok</p>
            }
            else
            {
                @foreach (var product in Model)
                {
                    <div class="col-md-4">
                        <partial name="_Product" model="product" />
                    </div>
                }
            }
        </div>
    </div>
</div>
