<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BusReservation.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <img src="~/img/sky1.jpg" alt="Alternate Text" class="w-100" style="height:100px;" />

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="container">
                <img src="~/img/bluebuslogo1.jpg" alt="Alternate Text" />
                <a class="navbar-brand font-italic" asp-area="" asp-controller="Home" asp-action="Index" >BLUE BUS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation"> 
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Expeditions</a>
                        </li>
                        <li class="nav-item"> 
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">City Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Our Branches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Online Reservation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Ticket Inquiry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button type="button" class=" UserLogin btn btn-lg btn-warning" data-bs-toggle="popover" title="Popover title" data-bs-content="And here's some amazing content. It's very engaging. Right?"><i class="fa-solid fa-user" style="color: black; text-decoration: none;"></i>User Login</button>
                        <div class="main-popup">
                            <div class="popup">
                                <div class="close-popup">X</div>
                                <div class="content-popup">
                                    <h3 class="font-weight-bold">BLUE BUS</h3>
                                    <div class="row text-center mt-3" >
                                        <div class="col-md-3">
                                            <label>Name</label>
                                            <label>Surname</label>
                                            <label>Password</label> 
                                        </div>
                                        <div class="col-md-9 ">
                                            <input type="text" name="name" value="" />
                                            <input type="text" name="name" value="" />
                                            <input type="password" value="FakePSW" id="myInput"><br><br>
                                            <input type="checkbox" onclick="myFunction()">Show Password
                                            <button class="btn btn-sm btn-success">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - BusReservation.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("myInput");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        const tikla = document.querySelector(".UserLogin");
        const mainPopup = document.querySelector(".main-popup");
        const close = document.querySelector(".close-popup");

        tikla.addEventListener("click", () => {
            mainPopup.style.display = "block";
        })

        // close.addEventListener("click",()=>{
        //     mainPopup.style.display="none";
        // })

        mainPopup.addEventListener("click", e => {
            if (e.target.className == "main-popup" || e.target.className == "close-popup") {
                mainPopup.style.display = "none";
            }
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
