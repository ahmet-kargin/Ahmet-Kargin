@model BusReservation.WebUI.Models.Direction.SeatListViewModel
@{
    ViewData["Title"] = "Choose Seat";
}

<h5 class="display-4">Choose Seat</h5>
<hr />



<div class="container shadow" style="margin-bottom: 100px; padding: 10px 14px;">
    <div class="card-body">
        <p class="card-text"><b style="font-size:19px;">Route:</b> From <span class="text-danger">@Model.StartCity</span> To <span class="text-danger">@Model.FinishCity</span> Price: (@Model.Price TL)</p><br />

        <p style=" font-size:24px; text-align:center;">
            <b>@Model.Date.ToShortDateString() - @Model.Date.Date.ToShortTimeString() </b>
        </p>

    </div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="h3">Seats</h1> <hr /> <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8 text-center">




                    @if (Model.SeatList != null && Model.SeatList.Count > 0)
                    {
                        int i = 1;
                        @foreach (var item in Model.SeatList)
                        {

                            @if (item.IsEmpty)
                            {
                                <a class="text-decoration-none text-white" href="/ticket/add/@item.ChooseSeatId">
                                    <div class="col-md-2" style="display: inline-block; background-color: lightgray; height: 40px; width: 40px;border:solid black; margin: 10px;">
                                        @item.Name.ToString()
                                    </div>
                                </a>
                            }
                            else
                            {
                                <div class="col-md-2" style="display: inline-block; background-color: red ;color:white; height: 40px; width: 40px;border:solid black; margin: 10px;">
                                    @item.Name.ToString()
                                </div>
                            }
                            @if (Model.SeatList.Count / 2 == i)
                            {
                                <hr />
                            }
                            i++;
                        }
                        <div class="row">
                            <div class="col-md-12 text-center" style="display: inline-block;">
                                <div style="display: inline-block; background-color: red;color:white; height: 40px; width: 40px;border:solid black; margin: 10px;">

                                </div>
                                <p>Red Colored is Full</p>
                            </div>
                            <input type="submit" name="name" value="" />
                        </div>
                    }
                    else
                    {
                        <div>
                            <p>Not Found Seat!!</p>
                        </div>
                    }







                </div>
            </div>




        </div>
    </div>


</div>


