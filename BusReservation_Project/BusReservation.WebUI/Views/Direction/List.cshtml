@model List<BusReservation.Entity.Direction>
@{
    ViewData["Title"] = "Direction";
}

<div class="container shadow" style="margin-bottom: 100px; padding: 10px 14px;">
    <div>
        <button class="btn btn-sm btn-success" ><a class="text-decoration-none text-white"  href="/direction/add">ADD DIRECTION</a></button>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1 class="h3">Direction List</h1> <hr /> <br />
            <table class="table table table-bordered shadow-sm mt-3">
                <thead>
                    <tr>
                        <th style="width:20px;">#</th>
                        <th style="width:25px;">Departure City</th>
                        <th style="width:25px;">Arrival City</th>
                        <th style="width:70px;">DATE</th>
                        <th style="width:80px;">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DirectionId</td>
                                <td>@item.StartCity</td>
                                <td>@item.FinishCity</td>
                                <td>@item.Date.ToShortDateString() - @item.Date.ToShortTimeString()</td>
                                <td>@item.Price</td>

                            </tr>
                        }
                    } 
                    else
                    {
                        <p>No direction found!!!</p>
                    }
                </tbody>

            </table>
        </div>
    </div>


</div>


