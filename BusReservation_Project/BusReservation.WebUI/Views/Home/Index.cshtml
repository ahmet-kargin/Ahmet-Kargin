<!--CHECK EXPEDITION START-->
<div class="expedition row p-2">
    <div class="col-md-3 ">
        <label for="" class="fs-5 fw-bold text-white fst-italic">Departure</label>
        <select name="" id="" style="width: 250px; margin-top:4px ; height: 30px;">
            <option value="Malatya">Malatya</option>
            <option value="Istanbul">İstanbul</option>
